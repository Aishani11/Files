#include<stdio.h>
main()
{
	printf("Pick an item : \n1. Pizza\n2. Burger\n3. Pasta\n4. French Fries\n5. Sandwich\n");
	int choice = 0;
	scanf("%d",&choice);

	switch(choice)
	{
	  case 1 : 
	  printf("Food item-Pizza.Prize-120");
	  break;
	  case 2 :
	  printf("Food item-Burger.Price-80");
	  break;
	  case 3 :
	  printf("Food item-Pasta.Price-150");
	  break;
	  case 4 :
	  printf("Food item-French Fries.Price-99");
	  break;
	  case 5 :
	  printf("Food item-Sandwich.Price-70");
	  break;
	  default:
	  printf("Pick correct Item");	
    
    }
    return 0;
    }
